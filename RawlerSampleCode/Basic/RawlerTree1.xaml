<Data xmlns="clr-namespace:Rawler.Tool;assembly=Rawler"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--取得ページの設定-->
    <Page Encoding="utf-8" Url="http://133.27.172.68/GoocaBooca">
        <!--タグのliのすべてを取得(繰り返し)-->
        <Tags Tag="li">
            <!--リンクの中身を取得-->
            <Links VisbleType="Label">
                <!--リンクの中身をデータ列にResearchという名前で書き込み-->
                <DataWrite Attribute="Research"></DataWrite>
            </Links>
            <!--リンクのURLを取得-->
            <Links VisbleType="Url">
                <!--取得したリンクからページを読み込む-->
                <Page>
                    <!--取得するclassの指定も簡単-->
                    <Tags Tag="div" ClassName="main">
                        <DataWrite Attribute="Main"></DataWrite>
                    </Tags>
                </Page>
            </Links>
            <!--データ列を次に移動する-->
            <NextDataRow></NextDataRow>
        </Tags>
        <!--ページ送り機能。上流のPageにURLを投げ同じ処理をする-->
        <Links LabelFilter="次を表示" IsSingle="True">
            <NextPage></NextPage>
        </Links>
    </Page>    
</Data>

